<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/backquiz"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="WELCOME"
        android:textSize="30sp"
        android:gravity="center"
        android:textColor="#3E404A"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="201dp"
        android:layout_marginBottom="10dp"
        app:srcCompat="@drawable/sports" />

    <Button
        android:id="@+id/sportsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sports"
        android:textSize="30sp"
        android:gravity="center"
        android:textColor="#7C0C3C"
        android:textStyle="bold"
        android:backgroundTint="#CDE4EF"
        android:layout_marginBottom="10dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="187dp"
        android:layout_marginBottom="10dp"
        app:srcCompat="@drawable/technology" />

    <Button
        android:id="@+id/technologyButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Technology"
        android:textSize="30sp"
        android:gravity="center"
        android:textColor="#910A4D"
        android:textStyle="bold"
        android:backgroundTint="#CDE4EF"
        android:layout_marginBottom="30dp" />

    <TextView
        android:id="@+id/hello"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Designed By - Mritunjay Kumar Singh"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="#2D5280"
        android:textStyle="bold"
        android:layout_marginBottom="10dp" />
</LinearLayout>